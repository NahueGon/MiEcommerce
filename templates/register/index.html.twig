{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block body %}

<div class="border border-light p-3">
    <div class="border-bottom mb-2">
        <h1>{{title}} Usuario</h1>
    </div>
    <div class="row">
    {{ form_start(form, { attr: { 'data-turbo': 'false' } }) }}
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.name)}}
            </div>
        </div>
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.lastname)}}
            </div>
        </div>
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.email)}}
            </div>
        </div>
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.password)}}
            </div>
        </div>
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.gender)}}
            </div>
        </div>
    {{ form_end(form) }}
    </div>
</div>
{% endblock %}
