{% extends 'base.html.twig' %}

{% block title %}
    {{title}}
{% endblock %}

{% block body %}
    <main class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row d-flex flex-column justify-content-center align-items-center">
                <div class="col-lg-6 col-sm-8">
                    <form class="form-signin shadow-sm rounded p-3" method="post">
                        <h1 class="h3 mb-3 font-weight-normal">{{title}}</h1>
                        <div class="form-floating">
                            <input type="email" name="_username" value="{{username}}" id="username" class="form-control" autocomplete="email" required autofocus placeholder="example@gmail.com">
                            <label for="username">Email</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="Password">
                            <label for="password">Password</label>
                        </div>
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        <div class="row px-3 d-none d-lg-block">
                            <div class="d-flex justify-content-between mb-3">
                                <label>
                                    <input type="checkbox" value="remember-me"> Recuerdame
                                </label>

                                <a class="text-muted" href="">Has Olvidado la contrase√±a?</a>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-12 ms-lg-auto">
                            <div class="row px-3">
                                <button class="btn btn-primary" type="submit">
                                    Iniciar Sesion
                                </button>
                            </div>
                        </div>
                    </form>
                    <div class="row mt-3">
                        <p class="text-center">
                            Aun no tienes una cuenta?
                            <a class="text-muted" href="{{ path('user_register') }}">Crear Cuenta</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
