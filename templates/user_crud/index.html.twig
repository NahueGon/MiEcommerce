{% extends 'base.html.twig' %}

{% block title %}
    {{title}}
{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="col-8 m-auto">
        <div class="row justify-content-center table-responsive">
            <h1>Usuarios</h1>
            {% if users %}
                <table class="table table-products table-hover table-sm  align-middle">
                    <thead class="table-dark pointer">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">Email</th>
                            <th scope="col">Genero</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">{{user.id}}</th>
                                <td>{{user.name}}</td>
                                <td>{{user.lastname}}</td>
                                <td>{{user.email}}</td>
                                <td>{{user.gender}}</td>
                                {# <td>
                                    <div class="row m-3">
                                        <a href="{{ path('show_product', {'id':product.id}) }}" type="button" class="btn btn-primary">Ver</a>
                                        <a href="{{ path('edit_product', {'id':product.id}) }}" type="button" class="btn btn-success mt-2 mb-2">Editar</a>
                                        <a href="{{ path('delete_product', {'id':product.id}) }}" type="button" class="btn btn-danger">Borrar</a>
                                    </div>
                                </td> #}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <h2>No hay Usuarios para mostrar</h2>
            {% endif %}
            {# <div class="col-12 mb-3">
                <a href="{{ path('create_product') }}" type="button" class="btn btn-primary float-end">Agregar +</a>
            </div> #}
        </div>
    </div>

</div>
{% endblock %}
